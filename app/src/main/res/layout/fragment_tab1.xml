<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.TabFragment1"
    android:id="@+id/frag1">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/frag1linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:id="@+id/container_title">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#102037"
                android:gravity="center"
                android:text="태양광 가로등 전문기업 (주)미지에너텍"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:fontFamily="@font/notosans_medium"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:id="@+id/container">

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                android:id="@+id/container_update">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3A5975"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="left|center_horizontal|center_vertical">

                        <TextView
                            android:id="@+id/updateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="업데이트 시각 : "
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textColor="#ffffff"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:gravity="right">

                        <!--Button
                            android:id="@+id/refresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Refresh" /-->

                        <ImageView
                            android:id="@+id/refresh"
                            android:layout_gravity="right"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@mipmap/refresh" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#284763"
                app:scale_base_width="400"
                app:scale_base_height="400">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#284763"
                android:orientation="vertical"
                app:scale_width="400"
                app:scale_height="400">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="전체 가로등 상태"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/notosans_regular"/>

                <!--de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/status"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    app:civ_border_overlay="false"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/black"
                    android:src="@mipmap/m0"/-->
                <com.ssomai.android.scalablelayout.ScalableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#284763"
                    app:scale_base_width="400"
                    app:scale_base_height="100">

                    <ImageView
                        android:id="@+id/status"
                        android:layout_gravity="center"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:scale_width="400"
                        app:scale_height="100"
                        app:srcCompat="@mipmap/light_bad" />

                </com.ssomai.android.scalablelayout.ScalableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/notosans_regular"
                    android:text="개별 가로등 상태"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center|center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/solar"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    app:scale_width="130"
                    app:scale_height="50"
                    app:srcCompat="@mipmap/solar_bad" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="/"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/battery"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="30dp"
                    app:srcCompat="@mipmap/battery_bad" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="/"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/light"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@mipmap/lamp_bad" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/status_very_good"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        app:civ_border_overlay="false"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/black"
                        android:src="@mipmap/m1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:text="매우 양호"
                        android:textSize="12dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="@font/notosans_regular"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/status_good"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        app:civ_border_overlay="false"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/black"
                        android:src="@mipmap/m2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:text="양호"
                        android:textSize="12dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="@font/notosans_regular"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/status_bad"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        app:civ_border_overlay="false"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/black"
                        android:src="@mipmap/m0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="나쁨"
                        android:textSize="12dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

            </LinearLayout>
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </androidx.cardview.widget.CardView>>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:id="@+id/container2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#284763"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/status_power"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        app:civ_border_overlay="false"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/black"
                        android:src="@mipmap/m0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/notosans_regular"
                        android:text="전원 (POWER)"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/status_charge"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        app:civ_border_overlay="false"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/black"
                        android:src="@mipmap/m0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:text="충전상태 (CHARGE)"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/status_over_voltage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        app:civ_border_overlay="false"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/black"
                        android:src="@mipmap/m0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:text="과전압 보호 (Over Voltage Protection)"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/status_low_voltage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        app:civ_border_overlay="false"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/black"
                        android:src="@mipmap/m0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:text="저전압 보호 (Low Voltage Protection)"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

