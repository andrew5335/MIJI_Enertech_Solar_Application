                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#284763"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@android:drawable/ic_media_play" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="각 Cell 전압 및 온도"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#284763"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_lefttop"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="Cell1"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_no"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="Cell2"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_no"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="Cell3"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_righttop"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="Cell4"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#284763"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cell1"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_leftbottom"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cell2"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_no"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cell3"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_no"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cell4"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_rightbottom"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#284763"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_lefttop"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="Cell5"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_no"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="Cell6"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_no"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="Cell7"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_righttop"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="Temprature"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="#284763"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cell5"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_leftbottom"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cell6"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_no"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cell7"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_no"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/temperature"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/box_border_rightbottom"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:id="@+id/container_send">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#284763"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#284763"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@mipmap/lamp_verygood" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text="LED 램프 제어"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical|center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/lamp_on"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="10dp"
                        android:text="ON"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:backgroundTint="#25547E" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="/" />

                    <Button
                        android:id="@+id/lamp_off"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="10dp"
                        android:text="OFF"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:backgroundTint="#25547E" />

                    <Button
                        android:id="@+id/lamp_test"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:text="Test"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:background="@drawable/box_border_dark"
                        app:backgroundTint="#121325" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
